<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfiloSettings">

    <ImageButton
        android:id="@+id/backButtonProfiloSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toTopOf="@+id/guideline42"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/grey"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/settings_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Account"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings_textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButtonProfiloSettings" />

    <TextView
        android:id="@+id/settings_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView1" />

    <TextView
        android:id="@+id/settings_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Privacy Settings"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings_textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView1" />

    <TextView
        android:id="@+id/settings_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView3" />

    <TextView
        android:id="@+id/settings_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Notifiche"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings_textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView3" />

    <TextView
        android:id="@+id/settings_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView5" />

    <TextView
        android:id="@+id/settings_textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Theme"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView5" />

    <TextView
        android:id="@+id/settings_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView7" />

    <View
        android:id="@+id/guideline_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_textView6"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/guideline43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline43" />

    <TextView
        android:id="@+id/settings_textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Contattaci"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings_textView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_1" />

    <TextView
        android:id="@+id/settings_textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView17" />

    <TextView
        android:id="@+id/settings_textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Termini e Condizioni"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings_textView21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView17" />

    <TextView
        android:id="@+id/settings_textView20"
        android:layout_width="wrap_content"
