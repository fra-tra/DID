        android:clickable="false"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView19" />

    <TextView
        android:id="@+id/settings_textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Privacy Policy"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settings_textView23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView19" />

    <TextView
        android:id="@+id/settings_textView22"
        android:layout_width="4dp"
        android:layout_height="23dp"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_textView21" />

    <TextView
        android:id="@+id/settings_textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="About App"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView21" />

    <TextView
        android:id="@+id/settings_textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:text=">"
        app:layout_constraintBottom_toBottomOf="@+id/settings_textView23"
