<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MyPlantAlertMeasuresFragment">

    <TextView
        android:id="@+id/alertMessageTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_background"
        android:gravity="start"
        android:padding="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="ALERT TEMPERATURE"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
 />

    <TextView
        android:id="@+id/alertMessageWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_background"
        android:gravity="start"
        android:padding="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="ALERT WATER"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
       />

    <TextView
        android:id="@+id/alertMessageBrightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_background"
        android:gravity="start"
        android:padding="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="ALERT BRIGHTNESS"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
       />

</LinearLayout>