<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutAddPlant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingAddPlantFragment">

    <ImageView
        android:id="@+id/bg_addplant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_addplant"
        app:layout_constraintBottom_toTopOf="@+id/guidelineAddPlant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/addplant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="@+id/bg_addplant"
        app:layout_constraintEnd_toEndOf="@+id/bg_addplant"
        app:layout_constraintStart_toStartOf="@+id/bg_addplant"
        app:layout_constraintTop_toTopOf="@+id/bg_addplant"
        app:lottie_rawRes="@raw/addplant" />

    <ProgressBar
        android:id="@+id/progressBarAddPlant"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineAddPlant" />

    <TextView
        android:id="@+id/textAddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_add_plant"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_addplant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_addplant"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>